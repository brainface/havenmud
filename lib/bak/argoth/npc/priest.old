    "position of High Priest after the murder of Arrhenius directly following "
    "the razing of Karak-Varn.");
    SetLevel(65);
    SetRace("orc");
    SetClass("cleric");
    SetGender("male");
    SetTown("Karak");
    SetReligion("Aberach");
    SetPlayerTitles( ([
    "newbie" : "the Apprentice Arrashim",
    "mortal" : "the Arrashim Priest",
    "hm" : "the Master of Betrayal",
]) );
    SetFreeEquip( ([
]) );
    SetUniqueSkills( ([
    "faith" : 1,
    "hack attack" : 2,
    "evokation" : 1,
    "enchantment" : 1,
    "healing" : 2,
    "knife attack" : 2,
    "stealth" : 1,
    "stealing" : 4,
]) );
