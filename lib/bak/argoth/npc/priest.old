    "revive" : 100,
    "protect" : 100,
    "divine mana" : 100,
    "flaming arrow" : 100,
    "sting" : 100,
    "bless" : 100,
    "divine magic" : 100,
    "divine cloak" : 100,
    "divine magic fully" : 100,
    "holy shield" : 100,
    "flaming arrow" : 100,
]) );
