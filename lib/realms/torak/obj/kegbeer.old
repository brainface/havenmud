#include <lib.h>
#include <meal_types.h>

inherit LIB_MEAL;

 static void create() {
  ::create();
  SetKeyName("beer");
  SetShort("a dixie cup of beer");
  SetLong(
    "This dixie cup holds ice cold Miller High Life. "
    "The Champs! The dixie cup itself is bright red."
  );
  SetMealType(MEAL_DRINK|MEAL_ALCOHOL);
  SetStrength(30);
  SetMealMessages(
    "The smooth taste of the cold keg beer is quite satisfying.",
    "$N drinks from a dixie cup.",
  );
  SetEmptyName("cup");
  SetEmptyShort("an empty dixie cup");
  SetEmptyLong(
    "This dixie cup once held the joys of beer but is now "
    "empty with a layer of sticky everywhere you could hold it. "
  );
}
